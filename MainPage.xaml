<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Weather.MainPage">

    <VerticalStackLayout Spacing="25" Padding="30">
        <!-- Entry for user to input city name -->
        <Entry x:Name="CityEntry" Placeholder="Enter city name" />

        <!-- Button to fetch weather -->
        <Button x:Name="GetWeatherButton" Text="Get Weather" />

        <!-- Label to display Temperature -->
        <Label x:Name="TemperatureLabel" FontSize="32" />

        <!-- Label to display Weather Condition -->
        <Label x:Name="WeatherDescriptionLabel" FontSize="24" />
    </VerticalStackLayout>

</ContentPage>
